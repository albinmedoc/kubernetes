{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "* 0-3 * * *"
  ],
  "prConcurrentLimit": 5,
  "kubernetes": {
    "managerFilePatterns": [
      "/.*\\.yaml$/",
      "/.*\\.yml$/"
    ]
  },
  "labels": [
    "dependencies"
  ],
  "assignees": [
    "albinmedoc"
  ],
  "reviewers": [
    "albinmedoc"
  ],
  "packageRules": [
    {
      "description": "Auto-merge patch and minor updates",
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "automerge": true
    },
    {
      "description": "Create PR for major updates (manual review required)",
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false
    }
  ]
}
