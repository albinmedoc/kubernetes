{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:automergeDaily",
    "schedule:daily"
  ],
  "ignoreUnstable": true,
  "prConcurrentLimit": 5,
  "kubernetes": {
    "managerFilePatterns": [
      "/.*\\.yaml$/",
      "/.*\\.yml$/"
    ]
  },
  "labels": [
    "dependencies"
  ],
  "assignees": [
    "albinmedoc"
  ],
  "reviewers": [
    "albinmedoc"
  ],
  "packageRules": [
    {
      "description": "n8n - follow latest stable tag",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["n8nio/n8n"],
      "followTag": "latest"
    },
    {
      "description": "Auto-merge patch updates",
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true
    },
    {
      "description": "Create PR for minor and major updates (manual review required)",
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "minor",
        "major"
      ],
      "automerge": false
    }
  ]
}
